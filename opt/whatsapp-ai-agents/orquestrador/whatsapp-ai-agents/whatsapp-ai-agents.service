[Unit]
Description=WhatsApp AI Agents Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/whatsapp-ai-agents/orquestrador/whatsapp-ai-agents
Environment=PATH=/opt/whatsapp-ai-agents/orquestrador/whatsapp-ai-agents/venv/bin
ExecStart=/opt/whatsapp-ai-agents/orquestrador/whatsapp-ai-agents/venv/bin/gunicorn --workers 4 --bind 0.0.0.0:8000 --timeout 120 src.main:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target